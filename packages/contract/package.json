    "./message-bus": {
      "node": "./dist/message-bus/message-bus.js",
      "types": "./dist/message-bus/message-bus.d.ts"
    },
    "./json-schema": {
      "node": "./dist/json-schema/json-schema.js",
      "types": "./dist/json-schema/json-schema.d.ts"
    }
