---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = "/rejot-logo-on-white.webp" } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:site_name" content="ReJot" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={Astro.url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(image, Astro.url)} />

<!-- Structured Data -->
<script is:inline type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Rejot",
    "url": "https://rejot.dev",
    "logo": "https://rejot.dev/rejot-logo-on-white.webp",
    "slogan": "Integration through Synchronization",
    "description": "Real-time operational data access across your organization to enable autonomy for product teams.",
    "sameAs": ["https://x.com/ReJotSync", "https://www.linkedin.com/company/rejot/"],
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "1111B S Governors Ave STE 25611",
      "addressLocality": "Dover",
      "addressRegion": "DE",
      "postalCode": "19904",
      "addressCountry": "US"
    },
    "founders": [
      {
        "@type": "Person",
        "name": "Wilco Kruijer",
        "sameAs": "https://x.com/WilcoKr"
      },
      {
        "@type": "Person",
        "name": "Jan Schutte",
        "sameAs": "https://janschutte.com"
      }
    ]
  }
</script>
