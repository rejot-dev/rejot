// import ReJotIconWireframe from "../icons/ReJotIconWireframe.astro";
// import { Code } from "astro:components";
import MicroserviceDiagram from "./MicroserviceDiagram.astro";
import XMark from "astro-heroicons/outline/XMark.astro";
import Check from "astro-heroicons/outline/Check.astro";
---

<div class="space-y-4 rounded-lg bg-white p-4 shadow-md md:p-8 dark:bg-gray-800">
  <div class="flex flex-row justify-between">
    <h3 class="text-xl font-semibold">Microservices</h3>

    <div
      class="inline-flex rounded-full overflow-hidden text-l font-medium shadow-sm border border-gray-300"
    >
      <input type="radio" name="mode" id="mode-sync" class="peer/sync sr-only" checked />
      <label
        for="mode-sync"
        class="px-4 py-1 cursor-pointer transition-colors duration-300
           text-gray-600 bg-gray-100
           peer-checked/sync:bg-rejot-red-600 peer-checked/sync:text-white"
      >
        Synchronous
      </label>

      <input type="radio" name="mode" id="mode-rejot" class="peer/rejot sr-only" />
      <label
        for="mode-rejot"
        class="px-4 py-1 cursor-pointer transition-colors duration-300
           text-gray-600 bg-gray-100
           peer-checked/rejot:bg-rejot-red-600 peer-checked/rejot:text-white"
      >
        With ReJot
      </label>
    </div>
  </div>

  <div class="flex flex-row justify-center space-x-4">
    <MicroserviceDiagram />
    {/* Synchronous mode */}
    <div id="sync-sidebar" class="flex flex-col space-y-2 max-w-96 justify-between">
      <div class="flex-grow p-4 transition-transform hover:scale-105" id="high-latency-item">
        <div class="flex flex-row space-x-2">
          <XMark class="size-6 text-rejot-red-600" />
          <h4 class="font-bold text-xl">Synchronous</h4>
        </div>
        <p>
          To serve a single request, a request may need to flow through multiple chained services
          increasing latency for each service added.
        </p>
      </div>
      <hr />
      <div class="flex-grow p-4 transition-transform hover:scale-105" id="circuit-breaker-item">
        <div class="flex flex-row space-x-2">
          <XMark class="size-6 text-rejot-red-600" />
          <h4 class="font-bold text-xl">Brittle</h4>
        </div>
        <p>
          Uptime of a single service is directly tied to the uptime of all the services it depends
          on, requiring additional infrastructure to prevent cascading failures like circuit
          breakers.
        </p>
      </div>
    </div>
    {/* With ReJot mode */}
    <div
      id="rejot-sidebar"
      style="display: none;"
      class="flex flex-col space-y-2 max-w-96 justify-between"
    >
      <div class="flex-grow p-4">
        <div class="flex flex-row space-x-2">
          <Check class="size-6 text-green-600" />
          <h4 class="font-bold text-xl">Asynchronous</h4>
        </div>
        <p>
          Asynchronous services can serve a single request without waiting for other services to
          reply, resulting in low latencies and reliable services. No need for circuit breakers.
        </p>
      </div>
      <hr />
      <div class="flex-grow p-4">
        <div class="flex flex-row space-x-2">
          <Check class="size-6 text-green-600" />
          <h4 class="font-bold text-xl">Managed Replication</h4>
        </div>
        <p>Rejot manages logical replication of data between your services</p>
      </div>
    </div>
  </div>
</div>

<script>
  const syncRadio = document.getElementById("mode-sync");
  const rejotRadio = document.getElementById("mode-rejot");
  const syncSidebar = document.getElementById("sync-sidebar");
  const rejotSidebar = document.getElementById("rejot-sidebar");
  const circuitBreakerItem = document.getElementById("circuit-breaker-item");
  const highLatencyItem = document.getElementById("high-latency-item");

  // Get SVG group elements - assuming MicroserviceDiagram is rendered in the same document
  const syncDiagramGroup = document.getElementById("synchronous");
  const rejotDiagramGroup = document.getElementById("with-rejot");
  const circuitOverlayGroup = document.getElementById("circuit-overlay");
  const latencyOverlayGroup = document.getElementById("overlay-latency");

  function updateVisibility() {
    // Ensure elements exist before proceeding
    if (
      !syncRadio ||
      !rejotRadio ||
      !syncSidebar ||
      !rejotSidebar ||
      !syncDiagramGroup ||
      !rejotDiagramGroup ||
      !circuitOverlayGroup ||
      !latencyOverlayGroup
    )
      return;

    // Hide overlays initially when changing modes
    circuitOverlayGroup.style.display = "none";
    latencyOverlayGroup.style.display = "none";

    // Check if rejotRadio is an input element and is checked
    if (rejotRadio instanceof HTMLInputElement && rejotRadio.checked) {
      syncSidebar.style.display = "none";
      rejotSidebar.style.display = "flex";
      syncDiagramGroup.style.display = "none";
      rejotDiagramGroup.style.display = "inline";
    } else {
      // Assume syncRadio is checked if rejotRadio isn't
      syncSidebar.style.display = "flex";
      rejotSidebar.style.display = "none";
      syncDiagramGroup.style.display = "inline";
      rejotDiagramGroup.style.display = "none";
    }
  }

  // Add event listeners only if all required elements are found
  if (
    syncRadio &&
    rejotRadio &&
    syncSidebar &&
    rejotSidebar &&
    circuitBreakerItem &&
    syncDiagramGroup &&
    rejotDiagramGroup &&
    circuitOverlayGroup &&
    highLatencyItem &&
    latencyOverlayGroup
  ) {
    // Add event listeners for radio buttons
    syncRadio.addEventListener("change", updateVisibility);
    rejotRadio.addEventListener("change", updateVisibility);

    // Add hover listeners for circuit breaker item
    circuitBreakerItem.addEventListener("mouseenter", () => {
      // Show overlay only if sync mode is active
      if (syncRadio instanceof HTMLInputElement && syncRadio.checked) {
        circuitOverlayGroup.style.display = "inline"; // Or 'block'
      }
    });

    circuitBreakerItem.addEventListener("mouseleave", () => {
      circuitOverlayGroup.style.display = "none";
    });

    // Add hover listeners for high latency item
    highLatencyItem.addEventListener("mouseenter", () => {
      // Show overlay only if sync mode is active
      if (syncRadio instanceof HTMLInputElement && syncRadio.checked) {
        latencyOverlayGroup.style.display = "inline"; // Or 'block'
      }
    });

    highLatencyItem.addEventListener("mouseleave", () => {
      latencyOverlayGroup.style.display = "none";
    });

    // Set initial state on page load
    updateVisibility();
  } else {
    console.error(
      "One or more elements required for microservice diagram interactivity not found.",
    );
  }
</script>
