---
type Props = {
  title: string;
  inverted?: boolean;
  class?: string;
};

const { title, inverted, class: className = "" } = Astro.props;
---

<div
  class={`flex flex-col md:flex-row md:items-center ${inverted ? "md:flex-row-reverse" : ""} ${className}`}
>
  <div class="flex-1 space-y-2">
    <h1 class="bg-clip-text text-2xl font-bold">
      {title}
    </h1>
    <p class="max-w-prose text-lg text-gray-600 dark:text-gray-400">
      <slot />
    </p>
  </div>
  <div class="hidden flex-1 items-center justify-center md:flex md:size-24">
    <slot name="icon" />
