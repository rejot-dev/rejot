---
import ArrowRight from "astro-heroicons/solid/ArrowRight.astro";

interface Props {
  href?: string;
  learnMore?: boolean;
}

const { href, learnMore = true } = Astro.props;
---

<a
  href={href ?? "#"}
  class="not-prose block min-h-32 rounded-lg border border-gray-200 bg-white p-6 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700"
>
  <div class="flex h-full flex-col justify-between gap-3">
    <div>
      <div class="flex items-center gap-2">
        <slot name="header" />
      </div>
      <div class="mt-3 min-h-20 text-gray-600 dark:text-gray-400">
        <slot name="description" />
      </div>
    </div>
    {
      learnMore && (
        <div class="flex items-center gap-2 text-rejot-red-600">
          <span class="font-medium">Learn More</span>
          <ArrowRight class="size-5" />
        </div>
      )
    }
  </div>
</a>
