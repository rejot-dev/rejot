---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
  secondary?: boolean;
};

const { secondary, class: className = "", ...rest } = Astro.props;
---

<a
  class={`inline-flex items-center gap-2 rounded-lg px-6 py-2 
    ${
      secondary
        ? "border-2 border-rejot-red-600 bg-rejot-red-50 text-rejot-red-600 hover:border-rejot-red-700 hover:bg-rejot-red-100 hover:text-rejot-red-700"
        : "bg-rejot-red-600 text-white drop-shadow-md hover:bg-rejot-red-700"
    } ${className}`}
  {...rest}
>
  <slot />
</a>
