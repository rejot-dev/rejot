---
import Base from "../layouts/Base.astro";
import ContactForm from "../components/ContactForm.astro";
import { pageTitle } from "../consts";
---

<Base title={pageTitle("Contact")} description="Contact us">
  <article class="w-full max-w-6xl space-y-12">
    <div class="mb-8 text-center">
      <h1 class="mb-4 text-4xl font-bold">Contact Us</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Don't hesitate to reach out for any reason!
      </p>
      <div class="mt-8 flex justify-center gap-4"></div>
    </div>

    <div class="flex items-center justify-between gap-12 md:mt-12">
      <div class="flex w-full flex-col justify-center gap-6 md:flex-row">
        <div class="w-full md:w-1/2">
          <ContactForm />
        </div>
        <div class="mt-4 space-y-4 md:mt-0">
          <div>
            <h4 class="text-xl font-bold">Mailing Address</h4>
            <div class="text-gray-600 dark:text-gray-400">
              <p>ReJot, Inc.</p>
              <p>1111B S Governors Ave STE 25611</p>
              <p>Dover, DE 19904</p>
            </div>
          </div>

          <div>
            <h4 class="text-xl font-bold">Email</h4>
            <div class="text-gray-600 dark:text-gray-400">
              <p>Reach us on founders [at] our domain.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</Base>
